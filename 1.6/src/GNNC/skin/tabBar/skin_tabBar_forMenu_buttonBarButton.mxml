<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   minWidth="90" minHeight="40" width="90" height="100%"
				   alpha.disabled="0.5" 
				   xmlns:elements="GNNC.UI.elements.*" 
				   xmlns:stage="GNNC.elements.stage.*" 
				   creationComplete="{init()}" 
				   
				   >
	<fx:Declarations>
	</fx:Declarations>
	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.ButtonBarButton")]
		]]>
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.binding.utils.ChangeWatcher;

			[Embed(source='image/menu-v1-over.png')]
			private const OVER:Class; 

			[Embed(source='image/menu-v1-selected.png')]
			private const SELECTED:Class; 
			
			public function init():void
			{
			}

		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" stateGroups="overStates" />
		<s:State name="down" stateGroups="downStates" />
		<s:State name="disabled" stateGroups="disabledStates" />
		<s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
		<s:State name="overAndSelected" stateGroups="overStates, selectedStates" />
		<s:State name="downAndSelected" stateGroups="downStates, selectedStates" />
		<s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
	</s:states>
	
	<elements:elementVLine alpha=".2" />
	<elements:elementVLine right="0" alpha=".1" />
	
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:RadialGradient>
				<s:GradientEntry color="0xFFFFFF" alpha=".1"/>
				<s:GradientEntry color="0xFFFFFF" alpha=".0"/>
			</s:RadialGradient>
		</s:fill>
	</s:Rect>
	
	<s:Image source="{SELECTED}" width="100%" height="100%" includeIn="selectedStates" smooth="true"  smoothingQuality="high" scaleMode="stretch"/>
	<s:Image source="{SELECTED}" width="100%" height="100%" includeIn="selectedStates" smooth="true"  smoothingQuality="high" scaleMode="stretch"/>

	<s:Image source="{OVER}" width="100%" height="100%" includeIn="overStates" smooth="true"  smoothingQuality="high" scaleMode="stretch" />
	<s:Rect left="1" right="1" height="100%" includeIn="overStates">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xFFFFFF" alpha=".6"/>
				<s:GradientEntry color="0xFFFFFF" alpha=".2"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>

	<s:Image source="{SELECTED}" width="100%" height="100%" includeIn="downStates" smooth="true"  smoothingQuality="high" scaleMode="stretch" />

	<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay     color="0x222222"         -->
	<elements:elementLabelDropShadow id="labelDisplay" fontSize="12" color="0x000000" _shadowColor="0xFFFFFF" _shadowStrength="2" _shadowBlurX="0.2" _shadowBlurY="0.2" alpha="1"
								   
								   trackingLeft=".1" trackingRight=".1"
								   textAlign="center"
								   verticalAlign="middle"
								   maxDisplayedLines="1"
								   paddingLeft="0" paddingRight="0"
								   horizontalCenter="0" verticalCenter="0"
								   left="1" right="1" bottom="4" />
		
</s:SparkButtonSkin>
